<idea-plugin>
    <id>com.solidity.jetbrains</id>
    <name>Solidity Light</name>
    <version>1.0</version>
    <vendor>Juan Risen</vendor>
    <icon>icons/solidity.svg</icon>
    <idea-version since-build="*.*" />

    <description><![CDATA[
        A super simple, stable, and basic Solidity language support plugin for JetBrains IDEs. Provides file recognition for .sol files.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.solidity.jetbrains.SolidityPostStartupActivity"/>
    </extensions>
</idea-plugin>
